<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <springProperty scope="context" name="application_name" source="spring.application.name"/>
    <contextName>${application_name}</contextName>

    <springProperty scope="context" name="application_version" source="spring.application.version"/>

    <springProfile name="local">

        <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

        <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>
                    %black(%d{ISO8601}) %highlight(%-5level) ${application_name} [%blue(%t)] %yellow(%C{50}):
                    %msg%n%throwable
                </Pattern>
            </layout>
        </appender>

        <root level="info">
            <appender-ref ref="Console"/>
        </root>

        <jmxConfigurator/>
    </springProfile>

    <springProfile name="default | !local | stdoutFormatJson">
        <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
        <include resource="logback-override.xml"/>

        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp>
                        <fieldName>application_timestamp</fieldName>
                        <timeZone>UTC</timeZone>
                    </timestamp>
                    <logLevel>
                        <fieldName>level</fieldName>
                    </logLevel>
                    <contextName>
                        <fieldName>application_name</fieldName>
                    </contextName>
                    <pattern>
                        <pattern>
                            {
                            "application_version": "${application_version}",
                            "fqdn": "${hostname}",
                            "pid": "${PID:-}"
                            }
                        </pattern>
                    </pattern>
                    <arguments>
                        <includeNonStructuredArguments>false</includeNonStructuredArguments>
                    </arguments>
                    <callerData>
                        <classFieldName>class</classFieldName>
                        <methodFieldName>[ignore]</methodFieldName>
                        <fileFieldName>[ignore]</fileFieldName>
                        <lineFieldName>[ignore]</lineFieldName>
                    </callerData>
                    <message>
                        <fieldName>message</fieldName>
                    </message>
                    <throwableClassName>
                        <fieldName>exception_class</fieldName>
                    </throwableClassName>
                    <stackTrace>
                        <fieldName>stack_trace</fieldName>
                        <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                            <maxDepthPerThrowable>200</maxDepthPerThrowable>
                            <maxLength>5000</maxLength>
                            <rootCauseFirst>true</rootCauseFirst>
                        </throwableConverter>
                    </stackTrace>
                </providers>
            </encoder>
        </appender>

        <!-- ДОБАВЛЕНО: запись тем же JSON в файл -->
        <appender name="FILE" class="ch.qos.logback.core.FileAppender">
            <file>./logs/app-json.log</file>
            <append>true</append>
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp>
                        <fieldName>application_timestamp</fieldName>
                        <timeZone>UTC</timeZone>
                    </timestamp>
                    <logLevel>
                        <fieldName>level</fieldName>
                    </logLevel>
                    <contextName>
                        <fieldName>application_name</fieldName>
                    </contextName>
                    <pattern>
                        <pattern>
                            {
                            "application_version": "${application_version}",
                            "fqdn": "${hostname}",
                            "pid": "${PID:-}"
                            }
                        </pattern>
                    </pattern>
                    <arguments>
                        <includeNonStructuredArguments>false</includeNonStructuredArguments>
                    </arguments>
                    <callerData>
                        <classFieldName>class</classFieldName>
                        <methodFieldName>[ignore]</methodFieldName>
                        <fileFieldName>[ignore]</fileFieldName>
                        <lineFieldName>[ignore]</lineFieldName>
                    </callerData>
                    <message>
                        <fieldName>message</fieldName>
                    </message>
                    <throwableClassName>
                        <fieldName>exception_class</fieldName>
                    </throwableClassName>
                    <stackTrace>
                        <fieldName>stack_trace</fieldName>
                        <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                            <maxDepthPerThrowable>200</maxDepthPerThrowable>
                            <maxLength>5000</maxLength>
                            <rootCauseFirst>true</rootCauseFirst>
                        </throwableConverter>
                    </stackTrace>
                </providers>
            </encoder>
        </appender>

        <root level="info">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="FILE"/>
        </root>

        <logger name="fluentbit" level="debug"/>
    </springProfile>
</configuration>
